{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceFolder}/../../emulator/sjasmplus",
            "args": [
                "src/wifiprn_drv.asm",
                "--zxnext=cspect",
                "--inc=inc",
                "--msg=war",
                "--fullpath",
                "--sym=wifiprn.sym",
                "--sld=wifiprn.sld",
                "--lst=wifiprn.lst"
            ],
            "problemMatcher": {
                "owner": "wifiprn",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Update SDCard",
            "type": "shell",
            "command": "${workspaceFolder}/../../emulator/hdfmonkey put ${workspaceFolder}/../../sdcard/tbblue-dev.sd wifiprn.drv",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Launch CSpect",
            "type": "shell",
            "command": "${workspaceFolder}/../../emulator/CSpect.exe -esc -r -w2 -brk -zxnext -nextrom -mmc=${workspaceFolder}/../../sdcard/tbblue-dev.sd",
            "dependsOrder": "sequence",
            "dependsOn": [],
            "problemMatcher": []
        }
    ]
}